{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "templates": {
            "$comment": "Template keys must not contain slashes or other special characters, only alphanumeric characters, dots, underscores, and hyphens are allowed",
            "anyOf": [
                {
                    "type": "null"
                },
                {
                    "type": "object",
                    "patternProperties": {
                        "^[a-zA-Z0-9][a-zA-Z0-9._-]{0,250}$": {
                            "type": "string"
                        }
                    },
                    "additionalProperties": false
                }
            ]
        }
    }
}
